{
  "name": "fluesternde-berg-geist",
  "version": "2.1.0",
  "description": "A beautiful theme switcher with smooth animations for React applications, featuring custom themes inspired by Mountain and Forest landscapes",
  "type": "module",
  "main": "./dist/fluesternde-berg-geist.umd.js",
  "module": "./dist/fluesternde-berg-geist.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/fluesternde-berg-geist.es.js",
      "require": "./dist/fluesternde-berg-geist.umd.js",
      "default": "./dist/fluesternde-berg-geist.es.js"
    },
    "./styles.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css",
      "default": "./dist/style.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tailwindcss -i ./src/styles/index.css -o ./dist/style.css --minify && tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "react",
    "react-19",
    "theme",
    "dark-mode",
    "theme-switcher",
    "tailwind",
    "framer-motion",
    "lucide"
  ],
  "author": "Hariharan Selvaraj",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hari2309s/fluesternde-berg-geist.git"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "framer-motion": "^11.0.0 || ^12.0.0",
    "lucide-react": "^0.400.0 || ^0.460.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "framer-motion": "^12.0.1",
    "lucide-react": "^0.469.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0"
  }
}
